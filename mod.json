	"dependencies": {
		"geode.node-ids": ">=v1.20.0"
	},
	"resources": {
        "spritesheets": {
			"BSODSheet": [
            	"resources/*.png"
			]
		},
		"fonts": {
			"Segoe_UI_This": {
				"path": "resources/segoeuithis.ttf",
				"size": 80
			}
		}
    },
	"settings": {
